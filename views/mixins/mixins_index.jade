                    | !{t('Submit to TASK')}
                #add-student(ng-click="make_payment()",ng-show="selectMultiple")
                    | !{t('Cancel')}

            button.ng-hide(class="btn btn-download", csv-header="getDownloadHeader()",ng-csv="getDownloadTable()",filename="admin-reports.csv",field-separator=",",decimal-separator=".",ng-show='loggedIn && isAdmin')
                | Export to CSV

            a(ng-click="logout($event)", href='', ng-hide="selectMultiple")= exit
            #google_translate_element
            script(type='text/javascript').
                function googleTranslateElementInit() {
                new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
                }
            script(type='text/javascript', src='//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit')

